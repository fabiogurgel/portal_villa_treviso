<p id="notice"><%= notice %></p>

<h1>Nota Fiscais</h1>

<table>
  <thead>
    <tr>
      <th>Fornecedor</th>
      <th>Codigo</th>
      <th>Numero</th>
      <th>Data</th>
      <th>Valor</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nota_fiscais.each do |nota_fiscal| %>
      <tr>
        <td><%= nota_fiscal.fornecedor %></td>
        <td><%= nota_fiscal.codigo %></td>
        <td><%= nota_fiscal.numero %></td>
        <td><%= nota_fiscal.data %></td>
        <td><%= nota_fiscal.valor %></td>
        <td><%= nota_fiscal.quantidade %></td>
        <td><%= link_to 'Show', nota_fiscal %></td>
        <td><%= link_to 'Edit', edit_nota_fiscal_path(nota_fiscal) %></td>
        <td><%= link_to 'Destroy', nota_fiscal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nota Fiscal', new_nota_fiscal_path %>

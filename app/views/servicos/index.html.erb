<p id="notice"><%= notice %></p>

<h1>Servicos</h1>

<table>
  <thead>
    <tr>
      <th>Area</th>
      <th>Descricao</th>
      <th>Lista produto</th>
      <th>Data</th>
      <th>Pessoa</th>
      <th>References</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.area %></td>
        <td><%= servico.descricao %></td>
        <td><%= servico.lista_produto %></td>
        <td><%= servico.data %></td>
        <td><%= servico.pessoa %></td>
        <td><%= servico.references %></td>
        <td><%= link_to 'Show', servico %></td>
        <td><%= link_to 'Edit', edit_servico_path(servico) %></td>
        <td><%= link_to 'Destroy', servico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

